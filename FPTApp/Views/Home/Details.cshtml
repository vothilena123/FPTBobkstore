@model FPTApp.Models.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Share/_Layout1.cshtml";
}

<div class="container">
    <div style="display: flex; margin-top: 60px; justify-content: right; " class="row1">
        <div class="book-img">
            <img style="width: 320px; height: 520px; " src="@Url.Content(Model.ImagePath)" />
        </div>
        <div class="col-lg-7 col-md-6 col-12" style="padding-left: 41px;">
            <div class="product-info-main">
                <div class="page-title">
                    <h1>@Html.DisplayFor(model => model.BookName)</h1>
                </div>
                <div class="product-info-stock-sku">
                    <span>In stock</span>
                    <div class="product-attribute">
                        <span>SKU</span>
                        <span class="value">24-WB05</span>
                    </div>
                </div>
                <div class="product-reviews-summary" style=" width: 600px;">
                    <div class="rating-summary">
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                    </div>
                    <div class="reviews-actions">
                        <a href="#">3 Reviews   |</a>
                        <a href="#" class="view">   Add Your Review</a>
                    </div>
                </div>
                <div class="product-info-price">
                    <div class="price-final">
                        <span>$ @Html.DisplayFor(model => model.BookPrice) USD</span>

                    </div>
                </div>
                <div class="product-add-form">
                    <form action="#" style="display: flex;">
                        
                        <a href="/ShoppingCart/AddToCart/@Model.BookID">Add to cart</a>
                    </form>
                </div>
                <div class="product-social-links">
                    <div class="product-addto-links" style="padding: 20px 0;">
                        <a href="#"><i class="fa fa-heart"></i></a>
                        <a href="#"><i class="fa fa-pie-chart"></i></a>
                        <a href="#"><i class="fa fa-envelope-o"></i></a>
                    </div>
                    <div style="width: 600px" class="product-addto-links-text">
                        <p style="text-align: justify;">Powerwalking to the gym or strolling to the local coffeehouse, the Savvy Shoulder Tote lets you stash your essentials in sporty style! A top-loading compartment provides quick and easy access to larger items, while zippered pockets on the front and side hold cash, credit cards and phone.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


<p style="padding-bottom: 200px;">
    
    @Html.ActionLink("Back to List", "Index")
</p>


